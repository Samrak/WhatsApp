<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/frame_size"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="@integer/weight"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/confirmed_shape_size"
            android:layout_height="@dimen/confirmed_shape_size"
            android:layout_marginBottom="@dimen/component_space"
            android:layout_marginTop="@dimen/confirmed_shape_top"
            android:background="@drawable/round_shape_green">

            <ImageView
                android:layout_width="@dimen/confirmed_shape_size"
                android:layout_height="@dimen/confirmed_shape_size"
                android:background="@drawable/ic_done" />
        </LinearLayout>

        <com.geveze.components.TextViewCustom
            style="@style/Font.Regular.20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/wellcome_geveze" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="@integer/weight"
        android:gravity="bottom"
        android:orientation="vertical">

        <com.geveze.components.ButtonCustom
            android:id="@+id/activityConfirmedGoOnButton"
            style="@style/Button.Primary"
            android:text="@string/go_on" />

    </LinearLayout>

</LinearLayout>