<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ListView
        android:background="@mipmap/chat_background"
        android:id="@+id/chatWindowListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:stackFromBottom="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.geveze.components.EditTextCustom
            android:id="@+id/phoneNumber"
            style="@style/EditText.chat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_circle_size"
            android:layout_marginLeft="@dimen/chat_window_edittext_padding"
            android:layout_weight="1"
            android:hint="@string/message_write" />

        <LinearLayout
            android:layout_width="@dimen/button_circle_size"
            android:layout_height="@dimen/button_circle_size"
            android:layout_marginLeft="@dimen/chat_window_edittext_padding"
            android:layout_marginRight="@dimen/chat_window_edittext_padding"
            android:background="@drawable/button_circle_selector"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sendButton"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/ic_send"
                android:gravity="center" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>