<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <gradient android:angle="270" android:endColor="@color/backgroundScreen" android:startColor="@color/backgroundScreen" />
            <corners android:radius="@dimen/button_corner_radius" />
            <stroke android:width="@dimen/button_stroke_width" android:color="@color/primaryDark" />

        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">

            <gradient android:angle="270" android:endColor="@color/backgroundScreen" android:startColor="@color/backgroundScreen" />
            <corners android:radius="@dimen/button_corner_radius" />
            <stroke android:width="@dimen/button_stroke_width" android:color="@color/primaryLight" />

        </shape>
    </item>
</selector>